<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_grad"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:elevation="0dp"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:layoutAnimation="@null"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:theme="@style/Theme.KQuiz.AppBarOverlay"
        app:elevation="0dp"
        app:statusBarScrim="@android:color/transparent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:fitsSystemWindows="true"
            android:layoutAnimation="@null"
            app:elevation="0dp"
            app:popupTheme="@style/Theme.KQuiz.PopupOverlay"
            app:statusBarScrim="@android:color/transparent"
            app:titleTextAppearance="@style/AppBarTextAppearance" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_main" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>