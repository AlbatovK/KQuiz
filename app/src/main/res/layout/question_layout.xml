<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9D9D6"
        android:elevation="0dp"
        android:padding="12dp"
        app:cardBackgroundColor="#D9D9D6"
        app:cardCornerRadius="24dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/answers"
                android:layout_marginTop="8dp"
                style="@style/CardTextStyleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Несколько вариантов ответа"
                android:layout_marginEnd="8dp"
                android:textColor="@color/dimgrey"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/description"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <TextView
                android:id="@+id/textView2"
                style="@style/CardTextStyleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Варианты ответа"
                android:textColor="@color/dimgrey"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/description"
                app:layout_constraintTop_toBottomOf="@+id/description" />

            <TextView
                android:id="@+id/counter"
                style="@style/CardTextStyleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Вопрос 1"
                android:textColor="@color/dimgrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/description"
                style="@style/CardTextStyleTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:text="Описание данного вопроса с несколькими словами"
                android:textColor="@color/dimgrey"
                android:textSize="16sp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/counter"
                app:layout_constraintTop_toBottomOf="@+id/counter" />

            <TextView
                android:id="@+id/right"
                style="@style/CardTextStyleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Правильный ответ"
                android:textColor="@color/dimgrey"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="@+id/right2"
                app:layout_constraintTop_toBottomOf="@+id/right2" />

            <TextView
                android:id="@+id/right2"
                style="@style/CardTextStyleTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Правильный ответ"
                android:textColor="@color/dimgrey"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@+id/answers"
                app:layout_constraintTop_toBottomOf="@+id/answers" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
